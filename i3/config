#Terminal
bindsym $mod+Return exec x-terminal-emulator 
bindsym $mod+control+Return exec kitty
bindsym $mod+shift+Return exec alacritty

#System Monitor
bindsym Mod1+control+Delete exec x-terminal-emulator -e htop

#Launcher Binds
bindsym $mod+space exec rofi -modi drun -show drun 
bindsym $mod+shift+space exec rofi -modi run -show run 
bindsym $mod+control+space exec rofi -modi window -show window
bindsym $mod+o exec mainprogram_drun.sh 

#Session Binds
bindsym $mod+p exec i3wm-power.sh 
bindsym $mod+control+r exec i3-msg reload
#bindsym $mod+shift+r exec i3 restart, ~/.config/conky/start_conky_main
bindsym $mod+shift+r exec i3 restart
bindsym $mod+shift+s exec i3-msg "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'" 
bindsym $mod+escape exec killall sxhkd; sleep 1; sxhkd -c ~/.config/sxhkd/sxhkdrc_i3 


